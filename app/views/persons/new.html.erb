<%= form_tag(create_person_path, method: "post") do %>
  <%= label_tag("Full Name:") %>
  <%= text_field_tag(:fullname) %>
  <br>
  <%= label_tag("Date of birth:") %>
  <%= date_select :person, :birth_date, :start_year=>1900, :end_year=>Date.today.year %>
  <br>
  <%= label_tag("Sex:") %>
  <%= select_tag "sex", options_for_select([['Male' , 'Male'], ['Female', 'Female']]) %>
  <br>
  <%= submit_tag("Save") %>
<% end %>